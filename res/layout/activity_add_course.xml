<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="270dp"
    android:layout_height="550dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="70dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="70dp"
    android:layout_marginBottom="0dp"
    android:orientation="vertical"
    tools:context=".AddTerm">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Course Info"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etCourseName"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="Course Name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etStartDate"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:autofillHints="2019-05-01"
        android:ems="10"
        android:hint="Start Date (2019-05-01)"
        android:inputType="date"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="End Date (2019-06-01)"
        android:inputType="date"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textMentorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Mentor's Name"
        android:ems="10"
        android:hint="Mentor's Name"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textMentorPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Mentor's Phone"
        android:ems="10"
        android:hint="Mentor's Phone"
        android:inputType="phone"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/textMentorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Mentor's E-mail"
        android:ems="10"
        android:hint="Mentor's E-mail"
        android:inputType="textEmailAddress"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/etStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Status"
        android:ems="10"
        android:hint="Status (Active, etc.)"
        android:inputType="textPersonName"
        android:textSize="24sp" />

    <Switch
        android:id="@+id/addCourseAlertSwitch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:lineSpacingExtra="18sp"
        android:switchMinWidth="45sp"
        android:text="Set Alerts for this course"
        android:textAlignment="center"
        android:textSize="18sp"
        tools:checked="false" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lineSpacingExtra="18sp"
        android:text="Submit"
        android:textAlignment="center" />

</LinearLayout>
