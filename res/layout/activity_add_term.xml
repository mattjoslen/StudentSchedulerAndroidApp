<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AddTerm"
        android:layout_width="wrap_content"
        android:layout_height="258dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="243dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Term Info"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etTermName"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:ems="10"
            android:hint="Term Name (Term 1)"
            android:inputType="textPersonName"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etStartDate"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:autofillHints="2019-05-01"
            android:ems="10"
            android:hint="Start Date (2019-05-01)"
            android:inputType="date"
            android:textAlignment="viewStart"
            android:textSize="24sp" />

    <EditText
        android:id="@+id/etEndDate"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="End Date (2019-06-01)"
        android:inputType="date"
        android:textSize="24sp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAlignment="center" />

    </LinearLayout>
